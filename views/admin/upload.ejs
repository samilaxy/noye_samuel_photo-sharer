    <h1> </h1>

    <div class="container " style="margin-top: 5%;">




        <form action="/admin/upload" method="POST" role="form" class="col-lg-6 offset-lg-3 " enctype="multipart/form-data">


            <div class=" row justify-content-center ">


                <div class="alert alert-dismissible alert-primary col-md-8 form-group">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <%= typeof msg !='undefined' ? msg : '' %>
                </div>
                <div class="col-md-8 form-group ">
                    <label for="name ">Title</label>
                    <input type="text" class="form-control " name="title" id="title " required>
                </div>
                <br>

                <div class=" col-md-8 form-group">
                    <label for="description" class="form-label mt-4 ">Description</label>
                    <textarea class="form-control" name="description" id="description" rows="3" required></textarea>
                </div>


                <div class="col-md-8 form-group">
                    <label for="formFile" class="form-label mt-4">Maximum size 3MB</label>
                    <input class="form-control" name="myImage" type="file" id="formFile">


                </div>




                <div class="col-md-8 mt-4 form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </div>


        </form>

    </div>




